.columns
    display               grid
    gap                   20px

.columns.is-full 
    grid-template-columns repeat(1, 1fr)
    gap                   20px

.columns.is-one-two
    grid-template-columns repeat(2, 1fr)
    gap                   20px

.columns.is-one-third 
    grid-template-columns repeat(3, 1fr)
    gap                   20px

.columns .columnnth-child(n+1)
    margin-bottom 20px

@media(max-width 600px)
    .columns.is-one-third
        grid-template-columns repeat(1, 1fr)
    .columns.is-one-two
        grid-template-columns repeat(1, 1fr)

    .title,
    .hide-sm
        display none

    .nes-container
        margin-top 0px

    .collapse
        display block

@media(min-width 601px)
    .hide-md
        display none !important

@media(min-width 601px) and (max-width 850px)
    .columns
        grid-template-columns repeat(2, 1fr)


