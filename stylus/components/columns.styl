.columns
    display              : grid;
    grid-template-columns: repeat(3, 1fr);
    gap                  : 20px

.columns .column:nth-child(n+1)
    margin-bottom: 20px

@media(max-width: 600px)
    .columns
        grid-template-columns: repeat(1, 1fr);

    .title,
    .menu
        display: none;

    .nes-container
        margin-top: 0px;

    .collapse
        display: block;

@media(min-width: 601px) and (max-width: 850px)
    .columns
        grid-template-columns: repeat(2, 1fr);
